<Window x:Class="jsiDataCmpWpf.ConnectionBuilders.SqliteConnectionBuilder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:jsiDataCmpWpf.ConnectionBuilders"
        mc:Ignorable="d"
        
        Title="SqliteConnectionBuilder" Height="120" Width="300">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Margin="5, 5, 5, 0">Database file</TextBlock>
        <DockPanel DockPanel.Dock="Top">
            <Button Margin="5, 0, 5, 5" Name="OpenFileButton" DockPanel.Dock="Right" Width="15" Click="OpenFileButton_Click">
                <Path Fill="#FF000000" >
                    <Path.Data>
                        <PathGeometry Figures="M0 0v8h7v-4h-4v-4h-3zm4 0v3h3l-3-3z" FillRule="nonzero"/>
                    </Path.Data>
                </Path>
            </Button>
            <TextBox Margin="5, 0, 5, 5" Name="FileNameText" ></TextBox>
        </DockPanel>
        <Button DockPanel.Dock="Bottom" Margin="5" Name="CloseButton" Click="CloseButton_Click">Close</Button>
        <Rectangle></Rectangle>
    </DockPanel>
</Window>
